.open-class{
    min-height: 100vh;
    padding-top: 128rpx;
    padding-bottom: 100rpx;
    box-sizing: border-box;
    background: #f4f7fa;
}
.open-class-nav{
    position: fixed;
    top:0;
    z-index: 100;
    width: 100%;
    box-sizing: border-box;
    background-image: linear-gradient(90deg, 
		#1a55cb 0%, 
		#6e77ff 100%), 
	linear-gradient(
		#2bd3fd, 
		#2bd3fd);
}
.open-class-view{
    background: #fff;
    margin-bottom: 18rpx;
}
.view-con{
   height: 90rpx;
   line-height: 90rpx;
   padding: 0 20rpx;
   border-top: 1px solid #e1e1e1;
}
.open-class-title{
    display: block;
    font-size: 30rpx;
    color:#333;
    padding-left: 22rpx;
    height: 98rpx;
    line-height: 98rpx;
}
.open-class-title::before{
    width: 6rpx;
    height: 23rpx;
    background:#3460db; 
    display: inline-block;
    content: '';
    margin-right: 20rpx;
    border-radius: 3rpx;
}
.open-note-con{
    border-top:1px solid #e1e1e1;
    padding: 30rpx;
    position: relative;
    height: 233rpx;
    box-sizing: border-box;
}
.open-note-con .note{
    color:#333;
    font-size: 28rpx;
}
.open-note-con .note::placeholder{
    color:#999;
    font-size: 28rpx;
}
.open-note-con .tip{
    position: absolute;
    right:19rpx;
    bottom:22rpx;
    color:#999;
    font-size: 28rpx;
}
.open-class-label{
    color:#333;
    font-size: 28rpx;
    margin-right: 43rpx;
}
.open-class-label-esp{
    color:#333;
    font-size: 28rpx;
    margin-left: 14rpx;
    margin-right: 43rpx;
}
.labelo,.labelo-esp{
    color:#333;
    font-size: 28rpx;
}
.labelo-esp{
    margin: 0 14rpx;
}
.open-input{
    display: inline-block;
    vertical-align: middle;
    color:#333;
    font-size: 28rpx;
}
.open-input-esp{
    margin-left: 43rpx;
}
.select-icon{
    width: 14rpx;
    height: 24rpx;
    float: right;
    margin-top: 34rpx;
}
.accord{
    color:#3460db;
    font-size: 28rpx;
    margin-right: 33rpx;
    display: inline-block;
    vertical-align: middle;
}
.open-rule{
    color:#333;
    font-size: 28rpx;
    max-width: 330rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: inline-block;
    vertical-align: middle;
}
.interval{
    color:#333;
    font-size: 28rpx;
    margin: 0 15rpx;
}
.dates{
    display: inline-block;
    color:#333;
    font-size: 28rpx;
    margin-left: 34rpx;
}
.date-picker{
    display: inline-block;
    width: 160rpx;
    height: 65rpx;
    border-radius: 6rpx;
    border:1px solid #e1e1e1;
    font-size: 23rpx;
    line-height: 65rpx;
    text-align: center;
}
.date-picker .dateesp{
    color:#7d7d7d;
}
.product-btn-con{
    margin-top: 230rpx;
}
.product-btn{
    width: 656rpx;
    height: 88rpx;
    font-size:36rpx;
    line-height: 88rpx;
    color:#fff;
    background-image: linear-gradient(90deg, #1a55cb 0%, #6e77ff 100%), linear-gradient(#2e9dd9, #2e9dd9);
}
button::after{
    border: none;
}