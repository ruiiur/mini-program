.send-order{
    background: #f4f7fa;
    min-height: 100vh;
    box-sizing: border-box;
}
.send-order-nav{
    position: fixed;
    top:0;
    z-index: 10000;
    width: 100%;
    box-sizing: border-box;
    background-image: linear-gradient(90deg, 
		#1a55cb 0%, 
		#6e77ff 100%), 
	linear-gradient(
		#2bd3fd, 
		#2bd3fd);
}
.view-con-esp{
   margin-top: 0 !important;
}
.view-con{
    background: #fff;
    margin-top: 18rpx;
}
.invite-con{
    position: relative;
}
.invite-btn{
    position: absolute;
    width: 140rpx;
    height: 54rpx;
    background-image: linear-gradient(90deg, #2661d8 0%, #6e77ff 100%), linear-gradient(#295bd4, #295bd4);
    border-radius: 10rpx; 
    color:#fff;
    font-size: 22rpx;
    padding: 0;
    text-align: center;
    line-height: 54rpx;
    top:22rpx;
    right: 22rpx;
}
.send-order-title{
    display: block;
    font-size: 30rpx;
    color:#333;
    padding-left: 22rpx;
    height: 98rpx;
    line-height: 98rpx;
}
.send-order-title::before{
    width: 6rpx;
    height: 23rpx;
    background:#3460db; 
    display: inline-block;
    content: '';
    margin-right: 20rpx;
    border-radius: 3rpx;
}
.send-note-con{
    border-top:1px solid #e1e1e1;
    padding: 30rpx;
    position: relative;
    height: 233rpx;
    box-sizing: border-box;
}
.send-note-con .note{
    color:#333;
    font-size: 28rpx;
    width: 100%;
    height: 100%;
}
.send-note-con .note::placeholder{
    color:#999;
    font-size: 28rpx;
}
.send-note-con .tip{
    position: absolute;
    right:19rpx;
    bottom:22rpx;
    color:#999;
    font-size: 28rpx;
}
.send-view{
    height: 90rpx;
    line-height: 90rpx;
    border-top:1px solid #e1e1e1;
    padding-left: 20rpx;
    padding-right: 25rpx;
}
.send-view .send-label{
    font-size: 28rpx;
    color: #333333;
}
.send-label-esp{
    margin: 0 15rpx;
}
.price-input{
    display: inline-block;
    vertical-align: middle;
    font-size: 28rpx;
    color: #333;
    margin-left: 58rpx;
    min-width: 500rpx;
}
.price-input::placeholder{
    font-size: 28rpx;
    color: #999;
}
.send-supplier{
    font-size: 28rpx;
    color: #999;
    margin-left: 58rpx;
}
.send-supplier-name{
    font-size: 28rpx;
    color: #333;
    margin-left: 58rpx;
}
.send-right{
    width: 14rpx;
    height: 24rpx;
    float: right;
    margin-top: 35rpx;
}
.send-order-btn-con{
    margin-top: 230rpx;
}
.send-order-btn{
    width: 656rpx;
    height: 88rpx;
    font-size:36rpx;
    line-height: 88rpx;
    color:#fff;
    background-image: linear-gradient(90deg, #1a55cb 0%, #6e77ff 100%), linear-gradient(#2e9dd9, #2e9dd9);
}
button::after{
    border: none;
}