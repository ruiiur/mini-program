.product-order{
    background: #f4f7fa;
    min-height: 100vh;
    padding-bottom: 190rpx;
}
.product-order-nav{
    position: fixed;
    top:0;
    z-index: 10000;
    width: 100%;
    box-sizing: border-box;
    background-image: linear-gradient(90deg, 
		#1a55cb 0%, 
		#6e77ff 100%), 
	linear-gradient(
		#2bd3fd, 
		#2bd3fd);
}
.view-con-esp{
    margin-top: 0 !important;
}
.view-con{
    background: #fff;
    margin-top: 18rpx;
    position: relative;
}
.product-name{
    font-size: 30rpx;
    color:#333;
    padding: 30rpx 36rpx 30rpx 20rpx;
    display: block;
}
.paste{
    position: absolute;
    top:30rpx;
    right:22rpx;
    width: 130rpx;
    height: 42rpx;
    line-height: 42rpx;
    background-image: linear-gradient(90deg, #1a55cb 0%, #6e77ff 100%), linear-gradient(#ffba00, #ffba00);
    font-size: 20rpx;
    color:#fff;
    padding: 0;
    text-align: center;
}
.change-remark-view{
    height: 90rpx;
    line-height: 90rpx;
    border-top:1px solid #e1e1e1;
    padding-left: 20rpx;
    padding-right: 25rpx;
}
.change-remark-view-esp{
    min-height: 90rpx;
    border-top:1px solid #e1e1e1;
    padding-left: 20rpx;
    padding-right: 25rpx;
    box-sizing: border-box;
    height: auto;
}
.change-remark-view-esp .remark-note{
    display: inline-block;
    vertical-align: top;
    color:#333;
    font-size: 28rpx;
    min-height: 90rpx;
    height: auto;
    padding-top: 25rpx;
    box-sizing: border-box;
    margin-left: 38rpx;
    width: 530rpx;
}
.change-remark-view-esp .remark-note::placeholder{
    color:#999;
    font-size: 28rpx;
}
.change-remark-view .change-remark-label, .change-remark-view-esp .change-remark-label{
    font-size: 28rpx;
    color: #333333;
    display: inline-block;
    width: 140rpx;
}
.change-remark-view-esp .change-remark-label{
    margin-top: 25rpx;
}
.change-remark-input{
    display: inline-block;
    vertical-align: middle;
    font-size: 28rpx;
    color: #333;
    margin-left: 38rpx;
    width: 300rpx;
}
.change-remark-input::placeholder{
    font-size: 28rpx;
    color: #999;
}
.remark-add,.remark-reduce{
    width: 80rpx;
    height: 60rpx;
    display: inline-block;
    vertical-align: middle;
}
.remark-add{
    margin-left: 40rpx;
}
.remark-reduce{
    margin-right: 10rpx;
}
.product-order-title{
    display: block;
    font-size: 30rpx;
    color:#333;
    padding-left: 22rpx;
    height: 98rpx;
    line-height: 98rpx;
}
.product-order-title::before{
    width: 6rpx;
    height: 23rpx;
    background:#3460db; 
    display: inline-block;
    content: '';
    margin-right: 20rpx;
    border-radius: 3rpx;
}
