.modify-product{
    background: #f4f7fa;
    min-height: 100vh;
    padding-bottom: 150rpx;
    box-sizing: border-box;
}
.modify-product-nav{
    position: fixed;
    top:0;
    z-index: 10000;
    width: 100%;
    box-sizing: border-box;
    background-image: linear-gradient(90deg, 
		#1a55cb 0%, 
		#6e77ff 100%), 
	linear-gradient(
		#2bd3fd, 
		#2bd3fd);
}
.view-con-esp{
    margin-top: 0rpx !important;
}
.view-con{
    background: #fff;
    margin-top: 18rpx;
}
.modify-product-title{
    display: block;
    font-size: 30rpx;
    color:#333;
    padding-left: 22rpx;
    height: 98rpx;
    line-height: 98rpx;
    border-bottom:1px solid #e1e1e1;
}
.modify-product-title::before{
    width: 6rpx;
    height: 23rpx;
    background:#3460db; 
    display: inline-block;
    content: '';
    margin-right: 20rpx;
    border-radius: 3rpx;
}
.modify-product-title-mar{
    margin-bottom: 30rpx;
}
.modify-product-name{
    /* border-top:1px solid #e1e1e1; */
    padding: 30rpx;
    position: relative;
    height: 233rpx;
    box-sizing: border-box;
}
.modify-product-name .product-name{
    color:#333;
    font-size: 28rpx;
    width: 100%;
    height: 100%;
}
.modify-product-name .product-name::placeholder{
    color:#999;
    font-size: 28rpx;
}
.modify-product-name .tip{
    position: absolute;
    right:19rpx;
    bottom:22rpx;
    color:#999;
    font-size: 28rpx;
}
.destination{
    height: 90rpx;
    /* border-top:1px solid #e1e1e1; */
    padding-top: 18rpx;
    box-sizing: border-box;
    padding-left: 30rpx;
}
.destination .pro-type{
    padding: 0;
    width: 140rpx;
    height: 54rpx;
    font-size:26rpx;
    line-height: 52rpx;
    text-align: center;
    color:#333;
    background: #fff;
    margin-right: 30rpx;
    border:1px solid #e1e1e1;
    display: inline-block;
}
.destination .pro-type.active{
    background-image: linear-gradient(90deg, #1a55cb 0%, #6e77ff 100%), linear-gradient(#2e9dd9, #2e9dd9);
    border:none;
    color:#fff;
    line-height: 54rpx;
}
.posters-list{
    display: inline-block;
    vertical-align: top;
    padding-left: 33rpx;
    padding-bottom: 15rpx;
}
.posters{
    width: 179rpx;
    display: inline-block;
    margin-right: 30rpx;
}
/* .posters .posters-img{
    width: 179rpx;
    height: 190rpx;
} */
.posters .posters-img{
    width: 180rpx;
    height: 280rpx;
    /* border-radius: 10rpx; */
}
.posters .covers-img{
    width: 179rpx;
    height: 190rpx;
    border-radius: 10rpx;
}
.posters .posters-tip{
    width: 179rpx;
    color:#7d7d7d;
    font-size: 26rpx;
    text-align: center;
    display: inline-block;
}
.update-btn{
    width: 179rpx;
    height: 190rpx;
    margin-left: 20rpx;
    display: inline-block;
    padding-bottom: 20rpx;
}
.modify-btn{
    width: 179rpx;
    height: 190rpx;
    margin-left: 50rpx;
    display: inline-block;
}
.modify-file{
    padding-left: 34rpx;
    /* border-top:1px solid #e1e1e1; */
    padding-top:23rpx;
    padding-bottom: 40rpx;
    height: 118rpx;
    box-sizing: border-box;
}
.modify-file .file-name{
    color:#333;
    font-size: 28rpx;
}
.modify-file .file-icon{
    width: 28rpx;
    height: 28rpx;
    display: inline-block;
    vertical-align: middle;
    margin-left: 33rpx;
    margin-right: 30rpx;
}
.modify-file .file-btn{
    padding: 0;
    width: 140rpx;
    height: 54rpx;
    font-size:26rpx;
    line-height: 54rpx;
    text-align: center;
    color:#fff;
    background-image: linear-gradient(90deg, #1a55cb 0%, #6e77ff 100%), linear-gradient(#2e9dd9, #2e9dd9);
    /* float: right; */
    /* margin-right: 130rpx; */
    margin-top: 8rpx;
    display: inline-block;
    vertical-align: middle;
}
.modify-product-note{
    padding: 30rpx 20rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color:#333;
    height: 280rpx;
}
.choose-con{
    padding-bottom: 60px;
 }
 .choose-bar{
     height: 50px;
     line-height: 50px;
     text-align: center;
     font-size: 16px;
     border-bottom:1px solid #e1e1e1;
 }
 .choose-bar:last-child{
     border-bottom: none;
 }
.product-btn-con{
    margin-top: 160rpx;
}
.product-btn{
    width: 656rpx;
    height: 88rpx;
    font-size:36rpx;
    line-height: 88rpx;
    color:#fff;
    background-image: linear-gradient(90deg, #1a55cb 0%, #6e77ff 100%), linear-gradient(#2e9dd9, #2e9dd9);
}
button::after{
    border: none;
}