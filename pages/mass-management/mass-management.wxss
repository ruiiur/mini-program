  }  */
  .activeDay{
    background-color: #3b63e0; 
    border-radius: 6rpx; 
  }
.activeDay .date-head{
    width: 100%; 
    height: 100%;
    text-align: center; 
    color: #fff; 
    margin: 0 auto; 
}
.activeDay .date-weight{
    color:#fff;
}
.date-weight{ 
    font-size: 20rpx; 
    /* padding: 15rpx 0;  */
    color:#3a62df;
} 
.nowDay .date-weight{ 
    color: #22A7F6; 
} 
.one{ 
    position: absolute; 
    bottom: 0; 
    right: 5rpx; 
    width: 20rpx; 
    height: 20rpx; 
    border-radius: 50%; 
    background-color: red; 
} 
.two{ 
    position: absolute; 
    bottom: 30rpx; 
    right: 5rpx; 
    width: 20rpx; 
    height: 20rpx; 
    border-radius: 50%; 
    background-color: blue; 
} 
.mass-change-list{
    margin-top: 18rpx;
}
.mass-list-title{
    display: block;
    font-size: 30rpx;
    color:#333;
    padding-left: 22rpx;
    height: 98rpx;
    line-height: 98rpx;
    background: #fff;
}
.mass-list-title::before{
    width: 6rpx;
    height: 23rpx;
    background:#3460db; 
    display: inline-block;
    content: '';
    margin-right: 20rpx;
    border-radius: 3rpx;
}
.mass-change-list .list-con{
    height: 90rpx;
    line-height: 90rpx;
    padding-left: 20rpx;
    border-top: 1px solid #e1e1e1;
    background: #fff;
}
.mass-change-list .list-con-esp{
    border-top:none;
}
.mass-change-list .list-con .list-title{
    color:#333;
    font-size: 28rpx;
    width: 120rpx;
    display: inline-block;
}
.mass-change-list .list-con .list-price{
    color:#333;
    font-size: 27rpx;
    display: inline-block;
    vertical-align: middle;
    margin-left: 40rpx;
}
.espi{
    margin-left: 5rpx !important;
}
.title-e{
    color:#333;
    font-size: 28rpx;
}
.espf{
    letter-spacing: 55rpx;
}
.espy{
    margin-right: 48rpx;
}
.espd{
    letter-spacing: 14rpx;
}
.mass-tip{
    margin-top: 10rpx;
    color: #ffba00;
    font-size: 28rpx;
    padding-left: 20rpx;
}
.mass-note{
    background: #fff;
    padding: 30rpx 20rpx 030rpx 25rpx;
    box-sizing: border-box;
    height: 280rpx;
    font-size: 28rpx;
    color:#333;
    border-top: 1px solid #e1e1e1;
}
.mass-managenment-con{
    padding: 100rpx 30rpx 0;
    box-sizing: border-box;
    text-align: center;
}
.mass-managenment-btn{
    display: inline-block;
    width: 300rpx;
    height: 88rpx;
    font-size:36rpx;
    line-height: 88rpx;
    color:#fff;
    background-image: linear-gradient(90deg, #1a55cb 0%, #6e77ff 100%), linear-gradient(#2e9dd9, #2e9dd9);
}
.mass-managenment-btn.esp{
    width:626rpx !important;
    margin-left: 0rpx !important;
}
.mass-managenment-btn:last-child{
    margin-left: 30rpx;
}
button::after{
    border: none;
}