.mass-management{
    background: #f4f7fa;
    min-height: 100vh;
    padding-top: 128rpx;
    box-sizing: border-box;
    padding-bottom: 20rpx;
}
.mass-management-nav{
    position: fixed;
    top:0;
    z-index: 10000;
    width: 100%;
    box-sizing: border-box;
    background-image: linear-gradient(90deg, 
		#1a55cb 0%, 
		#6e77ff 100%), 
	linear-gradient(
		#2bd3fd, 
		#2bd3fd);
}

/* 日历相关 */
.mass-management-con{

}
.date-wrap{
    width: 100%;
    height: 127rpx;
    text-align: center; 
    margin-bottom: 18rpx;
    padding: 19rpx 30rpx 0;
    background: #fff;
    box-sizing: border-box;
}
.date-show{  
    width:25%;
    display: inline-block;
    height: 90rpx;
    padding-top: 10rpx;
    box-sizing: border-box;
} 
.date-show.active{
    background-image: linear-gradient(90deg, #1a55cb 0%, #6e77ff 100%), linear-gradient(#ffffff, #ffffff);
    border-radius: 6rpx;
}
.date-show.active .month,.date-show.active .price{
    color: #fff;
}
.date-show .month{
    color: #333;
    font-size: 28rpx;
    display: block;
    width: 100%;
    text-align: center;
    margin-bottom: 7rpx;
}
.date-show .price{
    color: #333;
    font-size: 22rpx;
    display: block;
    width: 100%;
    text-align: center;
}
.header{ 
    font-size: 0; 
    padding: 0 24rpx; 
    background: #fff;
} 
.header>view{ 
    display: inline-block; 
    width: 14.285%; 
    color: #222; 
    font-size: 30rpx; 
    text-align: center; 
    border-bottom: 1px solid #D0D0D0; 
    padding: 30rpx 0; 
} 
/* .weekMark{ 
    position: relative; 
    z-index: 10;
}  */
.weekMark view{ 
    position: absolute; 
    bottom: 0; 
    left: 0; 
    width: 100%; 
    z-index: 10;
    border-bottom: 1px solid #22A7F6; 
} 
.date-box{ 
    font-size: 0; 
    padding: 10rpx 24rpx; 
    background: #fff;
    /* height: 400rpx; */
} 
.date-box>view{ 
    position: relative; 
    display: inline-block; 
    width: 14.285%; 
    color: #020202; 
    font-size: 40rpx; 
    text-align: center; 
    vertical-align: middle; 
    /* margin: 15rpx 0;  */
    height: 97rpx;
    padding-top: 15rpx;
    box-sizing: border-box;
    border-radius: 6rpx;
} 
.date-head{ 
    height: 97rpx; 
    /* line-height: 70rpx;  */
    font-size: 30rpx; 
    color:#333;
} 
