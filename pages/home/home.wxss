
.home{
    padding-top: 604rpx;
    box-sizing: border-box;
    font-family: Arial,"Microsoft Yahei","微软雅黑";
}
.home-top{
    position: fixed;
    width: 100%;
    top:0;
    height: 604rpx;
    z-index: 1000;
    background: #fff;
}
.home-bg{
    width: 100%;
    height: 424rpx;
}
.home-tab{
    display: inline-block;
    width: 33.3%;
    /* width: 25%; */
    height: 170rpx;
    text-align: center;
    padding-top: 10rpx;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    position: relative;
}
.home-tab image{
    width: 99rpx;
    height: 99rpx;
    border-radius: 50%;
}
.home-tab .userinfo-nickname{
    font-size: 26rpx;
    color:#333;
    display: block;
}
.home-tab .message-tip{
    font-size: 20rpx;
    color:#fefefe;
    display: inline-block;
    position: absolute;
    min-width: 26rpx;
    height: 26rpx;
    line-height: 26rpx;
    border-radius: 50%;
    background: #ff0303;
    text-align: center;
    box-sizing: border-box;
    top:20rpx;
    right:55rpx;
}
.margin-line{
  width: 100%;
  height: 18rpx;  
  background: #f4f7fa;
}
.home-product{
  padding-top: 15rpx;
}
.home-product .product-line{
    font-size: 30rpx;
    color:#222;
    padding-left:22rpx;
    margin-bottom: 30rpx;
}
.switch{
    float: right;
    width: 33rpx;
    height: 30rpx;
    margin-top: 13rpx;
    margin-right: 22rpx;
}
.home-product .product-line::before{
    width: 4rpx;
    height: 19rpx;
    background:#5b8cfe; 
    display: inline-block;
    content: '';
    margin-right: 20rpx;
}
.home-list .pro-con{
   padding: 28rpx 20rpx;
   border-bottom:1px solid #e1e1e1;
}
.home-list .pro-con .pro-img{
    height: 201rpx;
    width: 203rpx;
    margin-right: 27rpx;
    border-radius: 10rpx;
}
.home-list .pro-con .pro-info{
    width: 455rpx;
    display: inline-block;
    vertical-align: top;
}
.pro-info-text{
    width: 100% !important;
}
.home-list .pro-con .pro-info .name{
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    font-size: 28rpx;
    color:#333;
}
.home-list .pro-con .pro-info .tip{
    font-size: 24rpx;
    color:#7d7d7d;
    display: inline-block;
}
.home-list .pro-con .pro-info .file{
    font-size: 24rpx;
    color:#839dfd;
}
.pro-info button{
    background-image: linear-gradient(36deg,#5280eb 0%, #83b4fc 100%), linear-gradient(#ffffff, #ffffff);
    width: 94rpx;
    height: 40rpx;
    color:#fff;
    font-size: 20rpx;
    border-radius: 4rpx;
    display: inline-block;
    vertical-align: middle;
    border:none;
    line-height: 40rpx;
    margin-top: 35rpx;
    margin-right: 20rpx;
    padding: 0;
    text-align: center;
}
button::after{
    border: none;
}
.no-data{
    color:#999;
    font-size: 28rpx;
    text-align: center;
    padding: 10rpx 0;
}
.without-con{
    text-align: center;
}
.without-con .without-img{
    width: 200rpx;
    height: 205rpx;
    display: block;
    margin: 100rpx auto 30rpx auto;
}
.without-con .without-tip{
    font-size: 28rpx;
    color:#999;
}