
.receive{
    min-height: 100vh;
    box-sizing: border-box;
}
.receive-nav{
    position: fixed;
    top:0;
    z-index: 100;
    width: 100%;
    box-sizing: border-box;
    background-image: linear-gradient(90deg, 
		#1a55cb 0%, 
		#6e77ff 100%), 
	linear-gradient(
		#2bd3fd, 
		#2bd3fd);
}
.type-con{
    height: 76rpx;
    line-height: 76rpx;
    border-bottom: 1px solid #e1e1e1;
    padding-left: 10rpx;
    position: relative;
}
.type-con .type-text{
    font-size: 28rpx;
    color:#333;
    padding: 0 20rpx;
    padding-bottom: 15rpx;
}
.type-con .type-text.active{
    font-size: 28rpx;
    color:#295bd4;
    border-bottom:1px solid #295bd4;
}
.type-slider{
    width: calc(100% - 76rpx);
    overflow-x: scroll !important;
    white-space: nowrap;
}
.type-slider ::-webkit-scrollbar {display:none}
.switch{
    position: absolute;
    height: 76rpx;
    width: 76rpx;
    top:0;
    right:0;
    background: #fff;
}
.switch .switch-icon{
    width: 33rpx;
    height: 30rpx;
    margin-top: 23rpx;
    margin-left: 21rpx;
}
.receive-list .pro-con{
    padding: 28rpx 20rpx;
    border-bottom:1px solid #e1e1e1;
}
.receive-list .pro-con .pro-img{
    height: 201rpx;
    width: 203rpx;
    margin-right: 27rpx;
    border-radius: 10rpx;
}
.receive-list .pro-con .pro-info{
    width: 455rpx;
    display: inline-block;
    vertical-align: top;
}
.receive-list .pro-con .pro-info .name{
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    font-size: 28rpx;
    color:#333;
}
.receive-list .pro-con .pro-info .date{
    font-size: 24rpx;
    color:#7d7d7d;
    display: inline-block;
}
.pro-info-text{
    width: 100% !important;
}
.receive-list .without-con{
    text-align: center;
}
.receive-list .without-con .without-img{
    width: 200rpx;
    height: 205rpx;
    display: block;
    margin: 100rpx auto 30rpx auto;
}
.receive-list .without-con .without-tip{
    font-size: 28rpx;
    color:#999;
}
.pro-info button{
    background-image: linear-gradient(36deg,#5280eb 0%, #83b4fc 100%), linear-gradient(#ffffff, #ffffff);
    width: 94rpx;
    height: 40rpx;
    color:#fff;
    font-size: 20rpx;
    border-radius: 4rpx;
    display: inline-block;
    vertical-align: middle;
    border:none;
    line-height: 40rpx;
    margin-top: 35rpx;
    margin-right: 20rpx;
    padding: 0;
    text-align: center;
}
button::after{
    border: none;
}
.pro-info .esp{
    background: #fff;
    font-size: 20rpx;
    color:#999;
    border:1px solid #e1e1e1;
}
.no-data{
    color:#999;
    font-size: 28rpx;
    text-align: center;
    padding: 10rpx 0;
}